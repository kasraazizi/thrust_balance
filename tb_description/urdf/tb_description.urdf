<?xml version="1.0" ?>
<robot name="thrustbalance"> 

  # ------------------------------------- base footprint-------------------------------------------------
  <link name="base_footprint">
     
    <collision>
      <geometry>
        <box size="0.0 0.0 0.0"/>
      </geometry>
    </collision>     
  </link>
  # ------------------------------------- stand link-------------------------------------------------
  <link name="stand">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.20"/>
         
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <box size="0.01 0.01 0.20"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
        <inertia ixx="0.015" iyy="0.0375" izz="0.0375"
                 ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
   
  #   ---------------------------------------  pipe link  -----------------------------------------------
  <link name="pipe">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.005"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.6" radius="0.005"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
        <inertia ixx="0.015" iyy="0.0375" izz="0.0375"
                 ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  #   ---------------------------------------  right motor link -----------------------------------------------
  <link name="right_motor">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.01"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.01"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
        <inertia ixx="0.015" iyy="0.0375" izz="0.0375"
                 ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  #   ---------------------------------------  left motor link -----------------------------------------------
  <link name="left_motor">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.01"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.01"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
        <inertia ixx="0.015" iyy="0.0375" izz="0.0375"
                 ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  #   ---------------------------------------  joints -----------------------------------------------
  <joint name="basefootprint_to_stand" type="fixed">
    <axis xyz="0 0 0"/>
    <origin rpy="0 0 0" xyz="0 0 0.10"/>
    <parent link="base_footprint"/>
    <child link="stand"/>
    <limit lower="-0.785" upper="0.785" effort="1000.0"  velocity="10"/>
  </joint>


  <joint name="roll" type="revolute">
    <axis xyz="0 1 0"/>
    <origin rpy="0 -1.57 0" xyz="0 0 0.10"/>
    <parent link="stand"/>
    <child link="pipe"/>
    <limit lower="-0.785" upper="0.785" effort="1000.0"  velocity="10"/>
  </joint>


  <joint name="pipe_to_righ_tmotor" type="fixed">
    <axis xyz="0 0 0"/>
    <origin rpy="0 1.57 0" xyz="0 0 0.30"/>
    <parent link="pipe"/>
    <child link="right_motor"/>   
  </joint>

  <joint name="pipe_to_left_motor" type="fixed">
    <axis xyz="0 0 0"/>
    <origin rpy="0 1.57 0" xyz="0 0 -0.30"/>
    <parent link="pipe"/>
    <child link="left_motor"/>   
  </joint>
  

</robot>